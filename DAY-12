import java.util.Scanner;
class Venkat {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);  // Create Scanner object

        int[] arr = new int[3]; // Define array size

        for (int i = 0; i < arr.length; i++) {  // Loop to get input
            System.out.print("Enter element " + (i + 1) + ": ");
            arr[i] = sc.nextInt();  // Read input and store in array
        }

        System.out.println("Elements of the array:");
        for (int num : arr) {  // Loop to print array elements
            System.out.println(num);
        }
    }
}



output:
Enter element 1: 5
Enter element 2: 5
Enter element 3: 9
Elements of the array:
5
5
9
